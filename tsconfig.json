{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022", // Puedes usar ES2020 o superior

    /* Modules */
    "module": "NodeNext", // Clave para ESM moderno
    "rootDir": "./src",
    "moduleResolution": "NodeNext", // Clave para ESM moderno
    "experimentalDecorators": true, // Necesario para MikroORM
    "emitDecoratorMetadata": true, // Necesario para MikroORM con TsMorph

    /* Emit */
    "outDir": "./dist",
    "sourceMap": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
  // "exclude": ["node_modules", "dist"] // Opcional pero recomendado
}
